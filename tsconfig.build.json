{
    "compilerOptions": {
        "target": "esnext",
        "module": "commonjs",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "declaration": true,
        "sourceMap": true,
        "removeComments": true,
        "strict": true,
    },
    "exclude": [
        "node_modules",
        "dist",
        "**/__tests__/*",
        "src/**/*.spec.ts",
        "src/**/*.test.ts"
    ]
}